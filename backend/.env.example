# NetraAI Backend Environment Variables
# Copy this file to .env and fill in your values

# ===================
# REQUIRED
# ===================

# Groq API Key (get free at https://console.groq.com/)
GROQ_API_KEY=gsk_your_api_key_here

# ===================
# AUTHENTICATION (Required for OTP login)
# ===================

# Gmail SMTP for OTP emails
# 1. Enable 2FA on your Google account
# 2. Generate App Password: https://myaccount.google.com/apppasswords
SMTP_EMAIL=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# JWT Secret Key - CHANGE THIS IN PRODUCTION!
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=netra-secret-key-change-in-production-12345

# ===================
# PRODUCTION SETTINGS
# ===================

# Environment: 'development' or 'production'
# In production, JWT_SECRET_KEY must be changed from default
ENVIRONMENT=development

# CORS allowed origins (comma-separated)
# Development: http://localhost:5173,http://localhost:3000
# Production: https://netra-ai-two.vercel.app (your Vercel frontend URL)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ===================
# OPTIONAL
# ===================

# Google API Key (for Gemini provider)
# Get at https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=

# LLM Provider: 'groq' or 'gemini'
LLM_PROVIDER=groq

# ChromaDB storage path
# Local: ./netra_db
# Railway: /app/netra_db (mount volume at this path)
CHROMA_DB_PATH=./netra_db

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Rate limiting (requests per minute per IP)
RATE_LIMIT_PER_MINUTE=20

# Response caching
CACHE_MAX_SIZE=500
CACHE_TTL_SECONDS=86400

# OTP expiry (minutes)
OTP_EXPIRY_MINUTES=5

# JWT token expiry (minutes) - default 7 days
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=10080
